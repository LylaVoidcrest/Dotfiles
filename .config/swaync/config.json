{
    "$schema": "/etc/xdg/swaync/configSchema.json",

    "positionX": "right",
    "positionY": "top",

    "control-center-margin-top": 24,
    "control-center-margin-bottom": 24,
    "control-center-margin-right": 24,
    "control-center-margin-left": 0,

    "notification-inline-replies": true,
    "notification-icon-size": 64,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "notification-window-width": 500,

    "scripts": {
        "example-script": {
            "exec": "echo 'Do something...'",
            "app-name": "",
            "desktop-entry": "",
            "summary": "",
            "body": "",
            "urgency": "Normal",
            "category": "",
            "run-on": "receive"
        }
    },

    "notification-visibility": {
        "example-name": {
            "state": "muted",
            "override-urgency": "low",
            "app-name": "Spotify",
            "desktop-entry": "",
            "summary": "",
            "body": "",
            "urgency": "Low",
            "category": ""
        }
    },

    "widgets": [
        "label",
        "mpris",
        "title",
        "dnd",
        "notifications"
    ],

    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear All"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "label": {
            "text": "Notifications Center",
            "max-lines": 5
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 12
        }
    }
}
